<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap='tests\bootstrap.php'
>
    <testsuites>
        <testsuite name="ComposerUI Core Test Suite">
            <directory>./tests/ComposerUI/</directory>
            <file>./tests/ComposerUI/TestCase.php</file>
            <file>./tests/ComposerUI/ComposerUITest.php</file>
        </testsuite>
    </testsuites>
</phpunit>
